<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="LocalBusinessExplorer.Views.SignUpPage"
             Title="Sign Up">
    <StackLayout Padding="30" Spacing="20" VerticalOptions="CenterAndExpand">
        <Entry Placeholder="Email" Keyboard="Email" />
        <Entry Placeholder="Password" IsPassword="True" />
        <Entry Placeholder="Confirm Password" IsPassword="True" />
        <Button Text="Sign Up" Clicked="OnSignUpButtonClicked" />
    </StackLayout>
</ContentPage>
